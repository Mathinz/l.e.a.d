<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.dev.lead.activities.dashboard.OldHealthyFoods">

    <include
        android:id="@+id/layout"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_foods"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        app:cardCornerRadius="@dimen/_8sdp"
        app:cardElevation="@dimen/_8sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_8sdp"
            android:gravity="center"
            android:orientation="vertical">


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_gravity="center"
                    android:src="@drawable/food"
                    android:tint="@color/colorFood" />

                <com.github.lzyzsd.circleprogress.DonutProgress
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    app:donut_circle_starting_degree="270"
                    app:donut_finished_color="@color/colorFood"
                    app:donut_finished_stroke_width="@dimen/_6sdp"
                    app:donut_progress="35"
                    app:donut_text=""
                    app:donut_text_color="@color/colorWhite"
                    app:donut_unfinished_color="@color/colorFoodLight"
                    app:donut_unfinished_stroke_width="@dimen/_2sdp" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_4sdp"
                android:gravity="center"
                android:text="Food"
                android:textSize="@dimen/_15ssp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/grain"
                            android:tint="@color/colorFood" />

                        <com.github.lzyzsd.circleprogress.DonutProgress
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            app:donut_circle_starting_degree="270"
                            app:donut_finished_color="@color/colorFood"
                            app:donut_finished_stroke_width="@dimen/_5sdp"
                            app:donut_progress="70"
                            app:donut_text=""
                            app:donut_text_color="@color/colorWhite"
                            app:donut_unfinished_color="@color/colorFoodLight"
                            app:donut_unfinished_stroke_width="@dimen/_1sdp" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="100,94 fats"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/calories"
                            android:tint="@color/colorFood" />

                        <com.github.lzyzsd.circleprogress.DonutProgress
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            app:donut_circle_starting_degree="270"
                            app:donut_finished_color="@color/colorFood"
                            app:donut_finished_stroke_width="@dimen/_5sdp"
                            app:donut_progress="70"
                            app:donut_text=""
                            app:donut_text_color="@color/colorWhite"
                            app:donut_unfinished_color="@color/colorFoodLight"
                            app:donut_unfinished_stroke_width="@dimen/_1sdp" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="100,94 calories"
                        android:textSize="@dimen/_13ssp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
