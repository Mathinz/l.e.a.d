<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.dev.lead.activities.physicalActivity.AddStepsActivity">

    <include
        android:id="@+id/layout"
        layout="@layout/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_8sdp"
            app:cardElevation="@dimen/_8sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_8sdp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/steps"
                            android:tint="@color/colorSteps" />

                        <com.github.lzyzsd.circleprogress.DonutProgress
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            app:donut_circle_starting_degree="270"
                            app:donut_finished_color="@color/colorSteps"
                            app:donut_finished_stroke_width="@dimen/_5sdp"
                            app:donut_progress="0"
                            app:donut_text=""
                            app:donut_text_color="@color/colorWhite"
                            app:donut_unfinished_color="@color/colorSteps"
                            app:donut_unfinished_stroke_width="@dimen/_1sdp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_steps"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="100,94 steps"
                        android:textColor="@color/colorSteps"
                        android:textSize="@dimen/_20ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/thunder"
                            android:tint="@color/colorSteps" />

                        <com.github.lzyzsd.circleprogress.DonutProgress
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            app:donut_circle_starting_degree="270"
                            app:donut_finished_color="@color/colorSteps"
                            app:donut_finished_stroke_width="@dimen/_5sdp"
                            app:donut_progress="0"
                            app:donut_text=""
                            app:donut_text_color="@color/colorWhite"
                            app:donut_unfinished_color="@color/colorSteps"
                            app:donut_unfinished_stroke_width="@dimen/_1sdp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="100,94 minutes"
                        android:textColor="@color/colorSteps"
                        android:textSize="@dimen/_20ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/location"
                            android:tint="@color/colorSteps" />

                        <com.github.lzyzsd.circleprogress.DonutProgress
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            app:donut_circle_starting_degree="270"
                            app:donut_finished_color="@color/colorSteps"
                            app:donut_finished_stroke_width="@dimen/_5sdp"
                            app:donut_progress="0"
                            app:donut_text=""
                            app:donut_text_color="@color/colorWhite"
                            app:donut_unfinished_color="@color/colorSteps"
                            app:donut_unfinished_stroke_width="@dimen/_1sdp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="100,94 miles"
                        android:textColor="@color/colorSteps"
                        android:textSize="@dimen/_20ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_16sdp"
                            android:layout_height="@dimen/_16sdp"
                            android:layout_gravity="center"
                            android:src="@drawable/fire"
                            android:tint="@color/colorSteps" />

                        <com.github.lzyzsd.circleprogress.DonutProgress
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            app:donut_circle_starting_degree="270"
                            app:donut_finished_color="@color/colorSteps"
                            app:donut_finished_stroke_width="@dimen/_5sdp"
                            app:donut_progress="0"
                            app:donut_text=""
                            app:donut_text_color="@color/colorWhite"
                            app:donut_unfinished_color="@color/colorSteps"
                            app:donut_unfinished_stroke_width="@dimen/_1sdp" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tv_calories"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_4sdp"
                        android:gravity="center"
                        android:text="100,94 calories"
                        android:textColor="@color/colorSteps"
                        android:textSize="@dimen/_20ssp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@color/colorSteps"
                        android:text="@string/end"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_15ssp" />

                    <Button
                        android:id="@+id/btn_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_4sdp"
                        android:layout_weight="1"
                        android:background="@color/colorSteps"
                        android:text="@string/start"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/_15ssp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
